<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.yourcompany.helloworld" android:versionCode="1" android:versionName="1.0" >
  <uses-sdk android:minSdkVersion="21" android:targetSdkVersion="21" />
  <application android:label="HelloWorld" android:debuggable="true" android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
    <activity android:name="MainActivity" android:label="HelloWorld" >
      <intent-filter  >
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name="SecondActivity" android:label="SecondActivity" android:parentActivityName="MainActivity" >
      <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="MainActivity" />
    </activity>
  </application>
  <uses-permission android:name="android.permission.INTERNET" />
</manifest>
